<div class="featured-products">
  <ul class="featured-products__list">
    {% for product in products limit: 4 %}
      {% render 'product-card', product: product %}
    {% endfor %}
  </ul>

  {% if products.size > 4 %}
    <ul class="featured-products__list featured-products__list--hidden">
      {% for product in products offset: 4 %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </ul>
    <div class="featured-products__button-container">
      <button class="featured-products__button">VIEW ALL</button>
    </div>
  {% endif %}
</div>

